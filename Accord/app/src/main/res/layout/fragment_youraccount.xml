<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".YourAccount.YourAccountFragment">

    <View
        android:id="@+id/view"
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="0dp"
        android:background="#f3f4f5" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="300dp"
        android:layout_alignTop="@+id/view"
        android:layout_marginTop="10dp"
        android:background="#f3f4f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:padding="15dp"
                android:text="Name"
                android:textColor="@color/black1"
                android:textSize="24sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:padding="15dp"
                android:text="Email"
                android:textColor="@color/black1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:padding="15dp"
                android:text="Phone"
                android:textColor="@color/black1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:padding="15dp"
                android:text="Address"
                android:textColor="@color/black1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/OtherInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:padding="15dp"
                android:text="Password"
                android:textColor="@color/black1"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="135dp"
        android:visibility="visible"
        app:srcCompat="@drawable/person_male"
        tools:srcCompat="@drawable/person_male" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-115dp"
        android:src="@drawable/ic_wave_1" />

    <TextView
        android:id="@+id/Orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="10dp"
        android:text="Orders"
        android:textColor="#f3f4f5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/OrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Orders"
        android:layout_alignStart="@+id/Orders"
        android:layout_alignEnd="@+id/Orders"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:textColor="#f3f4f5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/DonateNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DonateText"
        android:layout_alignStart="@+id/DonateText"
        android:layout_alignEnd="@+id/DonateText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:textColor="#f3f4f5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/DonateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-78dp"
        android:text="Donations"
        android:textColor="#f3f4f5"
        android:textSize="30sp" />

</RelativeLayout>