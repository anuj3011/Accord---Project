<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="119dp"
        app:srcCompat="@drawable/icon1" />

    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Image"
        android:layout_alignStart="@+id/Image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/ubuntu_mono_bold"
        android:text="Heading"
        android:textColor="@color/transparentwhite"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Heading"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/atomic_age"
        android:inputType="textMultiLine"
        android:text="Do you face difficulty to find the right person for the right job in an emergency? Then this App is just for you.  By using this App you can get skilled workers who are just a few minutes away from your home "
        android:textColor="@color/transparentwhite"
        android:textSize="20sp"
        android:textStyle="italic" />
</RelativeLayout>